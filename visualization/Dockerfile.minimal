FROM python:3.9-slim

# Установка системных зависимостей для pygraphviz
RUN apt-get update && apt-get install -y \
    graphviz \
    graphviz-dev \
    pkg-config \
    gcc \
    g++ \
    make \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Установка совместимых версий библиотек
RUN pip install --no-cache-dir \
    numpy==1.23.5 \
    pandas==1.5.3 \
    streamlit==1.22.0 \
    networkx==3.1 \
    matplotlib==3.7.1 \
    plotly==5.14.1 \
    pygraphviz==1.10 \
    pillow==9.5.0

# Создание минимального приложения
RUN mkdir -p /app/data/decision_trees

# Создание минимального приложения Streamlit
RUN echo 'import streamlit as st\n\
st.set_page_config(page_title="Визуализация деревьев решений", layout="wide")\n\
st.title("Визуализация деревьев решений AI агента")\n\
st.write("Сервис успешно запущен!")\n\
st.success("Если вы видите это сообщение, значит сервер Streamlit работает корректно.")\n\
st.info("Для визуализации деревьев решений необходимо добавить файлы JSON в директорию /app/data/decision_trees/")\n\
' > /app/app.py

# Открытие порта для Streamlit
EXPOSE 8501

# Запуск приложения с явным указанием адреса и порта
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]