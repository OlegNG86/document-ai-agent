# Development Performance Configuration
# Optimized for development and testing

# Caching Configuration
CACHE_QUERY_MAX_SIZE=200
CACHE_EMBEDDING_MAX_SIZE=500
CACHE_DEFAULT_TTL=1800  # 30 minutes
CACHE_EMBEDDING_TTL=3600  # 1 hour

# Chunking Configuration
CHUNK_SIZE_LEGAL=600
CHUNK_SIZE_TECHNICAL=1000
CHUNK_SIZE_NARRATIVE=800
CHUNK_SIZE_STRUCTURED=500
CHUNK_OVERLAP_RATIO=0.15

# Async Processing
ASYNC_MAX_WORKERS=2
ASYNC_LARGE_DOC_THRESHOLD=30000  # 30KB

# Performance Monitoring
PERFORMANCE_SLOW_THRESHOLD=3.0  # 3 seconds
PERFORMANCE_MEMORY_THRESHOLD=300  # 300MB
PERFORMANCE_MONITORING_ENABLED=true

# Resource Limits
MAX_CONCURRENT_EMBEDDINGS=3
MAX_CONCURRENT_QUERIES=2
EMBEDDING_BATCH_SIZE=5

# Logging
LOG_PERFORMANCE_METRICS=true
LOG_CACHE_STATISTICS=false
LOG_SLOW_OPERATIONS=true