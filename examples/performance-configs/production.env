# Production Performance Configuration
# Optimized for high-load production environments

# Caching Configuration
CACHE_QUERY_MAX_SIZE=1000
CACHE_EMBEDDING_MAX_SIZE=2000
CACHE_DEFAULT_TTL=3600  # 1 hour
CACHE_EMBEDDING_TTL=7200  # 2 hours

# Chunking Configuration
CHUNK_SIZE_LEGAL=800
CHUNK_SIZE_TECHNICAL=1200
CHUNK_SIZE_NARRATIVE=1000
CHUNK_SIZE_STRUCTURED=600
CHUNK_OVERLAP_RATIO=0.2

# Async Processing
ASYNC_MAX_WORKERS=8
ASYNC_LARGE_DOC_THRESHOLD=100000  # 100KB

# Performance Monitoring
PERFORMANCE_SLOW_THRESHOLD=5.0  # 5 seconds
PERFORMANCE_MEMORY_THRESHOLD=1000  # 1GB
PERFORMANCE_MONITORING_ENABLED=true

# Resource Limits
MAX_CONCURRENT_EMBEDDINGS=10
MAX_CONCURRENT_QUERIES=8
EMBEDDING_BATCH_SIZE=20

# Health Monitoring
HEALTH_CHECK_INTERVAL=30  # 30 seconds
HEALTH_CPU_WARNING_THRESHOLD=80
HEALTH_CPU_CRITICAL_THRESHOLD=95
HEALTH_MEMORY_WARNING_THRESHOLD=85
HEALTH_MEMORY_CRITICAL_THRESHOLD=95

# Logging
LOG_PERFORMANCE_METRICS=true
LOG_CACHE_STATISTICS=true
LOG_SLOW_OPERATIONS=true
LOG_RESOURCE_USAGE=true