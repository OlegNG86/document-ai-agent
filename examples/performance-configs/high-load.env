# High Load Performance Configuration
# Optimized for maximum throughput and concurrent processing

# Caching Configuration
CACHE_QUERY_MAX_SIZE=2000
CACHE_EMBEDDING_MAX_SIZE=5000
CACHE_DEFAULT_TTL=7200  # 2 hours
CACHE_EMBEDDING_TTL=14400  # 4 hours

# Chunking Configuration
CHUNK_SIZE_LEGAL=1000
CHUNK_SIZE_TECHNICAL=1500
CHUNK_SIZE_NARRATIVE=1200
CHUNK_SIZE_STRUCTURED=800
CHUNK_OVERLAP_RATIO=0.25

# Async Processing
ASYNC_MAX_WORKERS=16
ASYNC_LARGE_DOC_THRESHOLD=50000  # 50KB

# Performance Monitoring
PERFORMANCE_SLOW_THRESHOLD=10.0  # 10 seconds
PERFORMANCE_MEMORY_THRESHOLD=2000  # 2GB
PERFORMANCE_MONITORING_ENABLED=true

# Resource Limits
MAX_CONCURRENT_EMBEDDINGS=20
MAX_CONCURRENT_QUERIES=15
EMBEDDING_BATCH_SIZE=50

# Health Monitoring
HEALTH_CHECK_INTERVAL=15  # 15 seconds
HEALTH_CPU_WARNING_THRESHOLD=85
HEALTH_CPU_CRITICAL_THRESHOLD=98
HEALTH_MEMORY_WARNING_THRESHOLD=90
HEALTH_MEMORY_CRITICAL_THRESHOLD=98

# Advanced Optimizations
ENABLE_EMBEDDING_PRECOMPUTATION=true
ENABLE_QUERY_RESULT_AGGREGATION=true
ENABLE_BACKGROUND_CACHE_WARMING=true

# Logging
LOG_PERFORMANCE_METRICS=true
LOG_CACHE_STATISTICS=true
LOG_SLOW_OPERATIONS=true
LOG_RESOURCE_USAGE=true
LOG_DETAILED_TIMING=false  # Disable for performance