# Production logging configuration for AI Agent
# Optimized for production environments with focus on performance and security

# Basic logging settings
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=true
LOG_DIR=/var/log/ai-agent

# Log rotation settings (larger files for production)
MAX_LOG_SIZE_MB=100
LOG_BACKUP_COUNT=30

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_OPERATION_THRESHOLD=10.0
MEMORY_USAGE_THRESHOLD=1000

# Error handling settings
ENABLE_ERROR_NOTIFICATIONS=true
ERROR_RATE_THRESHOLD=20
ERROR_RATE_WINDOW_MINUTES=10

# Health monitoring
ENABLE_HEALTH_MONITORING=true
HEALTH_CHECK_INTERVAL=300  # 5 minutes
CPU_WARNING_THRESHOLD=85
CPU_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=90
DISK_CRITICAL_THRESHOLD=95

# Network and retry settings (more conservative)
NETWORK_TIMEOUT=60
OLLAMA_TIMEOUT=180
DATABASE_TIMEOUT=45
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=2.0
RETRY_MAX_DELAY=120.0

# External service logging levels (minimal noise)
CHROMADB_LOG_LEVEL=ERROR
HTTPX_LOG_LEVEL=ERROR
URLLIB3_LOG_LEVEL=ERROR
REQUESTS_LOG_LEVEL=ERROR
OLLAMA_LOG_LEVEL=WARNING

# Security settings (strict)
MASK_SENSITIVE_DATA=true
LOG_SENSITIVE_FIELDS=false

# Debug settings (disabled for production)
ENABLE_DEBUG_LOGGING=false
LOG_STACK_TRACES=false
LOG_FUNCTION_CALLS=false

# Production-specific settings
ENABLE_COLORS=false
LOG_TO_CONSOLE=false
COMPRESS_OLD_LOGS=true