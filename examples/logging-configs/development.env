# Development logging configuration
# Подробное логирование для разработки и отладки

# Основные настройки
LOG_LEVEL=DEBUG
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=false
LOG_DIR=logs/dev

# Размеры и ротация логов
MAX_LOG_SIZE_MB=5
LOG_BACKUP_COUNT=3

# Мониторинг производительности
SLOW_OPERATION_THRESHOLD=2.0
MEMORY_USAGE_THRESHOLD=300
ENABLE_PERFORMANCE_MONITOR=true

# Ollama настройки
OLLAMA_HOST=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen2.5vl:latest

# Пути к данным
DATA_PATH=data/dev
DOCUMENTS_PATH=data/dev/documents
CHROMA_PATH=data/dev/chroma_db

# Сессии
SESSION_TIMEOUT_HOURS=8