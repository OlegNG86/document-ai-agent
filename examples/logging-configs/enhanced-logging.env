# Enhanced logging configuration for AI Agent
# This configuration enables detailed logging with error tracking and performance monitoring

# Basic logging settings
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=true
LOG_DIR=logs

# Log rotation settings
MAX_LOG_SIZE_MB=50
LOG_BACKUP_COUNT=10

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_OPERATION_THRESHOLD=5.0
MEMORY_USAGE_THRESHOLD=500

# Error handling settings
ENABLE_ERROR_NOTIFICATIONS=true
ERROR_RATE_THRESHOLD=10
ERROR_RATE_WINDOW_MINUTES=5

# Health monitoring
ENABLE_HEALTH_MONITORING=true
HEALTH_CHECK_INTERVAL=60
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=95
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=85
DISK_CRITICAL_THRESHOLD=95

# Network and retry settings
NETWORK_TIMEOUT=30
OLLAMA_TIMEOUT=120
DATABASE_TIMEOUT=30
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# External service logging levels
CHROMADB_LOG_LEVEL=WARNING
HTTPX_LOG_LEVEL=WARNING
URLLIB3_LOG_LEVEL=WARNING
REQUESTS_LOG_LEVEL=WARNING
OLLAMA_LOG_LEVEL=INFO

# Security settings
MASK_SENSITIVE_DATA=true
LOG_SENSITIVE_FIELDS=false

# Debug settings (for development)
ENABLE_DEBUG_LOGGING=false
LOG_STACK_TRACES=true
LOG_FUNCTION_CALLS=false